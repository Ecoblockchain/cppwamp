{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "cppwamp.demo.chat",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "rawsocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 12345
               },
               "serializers": ["json"],
               "debug": true
            }
         ]
      }
   ]
}

